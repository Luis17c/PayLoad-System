{
   "compilerOptions": {
      "resolveJsonModule": true,
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "baseUrl": ".",
      "paths": {
         "@config/*": ["./src/config/*"],
         "@modules/*": ["./src/modules/*"],
         "@shared/*": ["./src/shared/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true 
   }
}